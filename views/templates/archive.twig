{% extends "/layouts/base.twig" %}

{% block main %}
    <div class="main-content pt-28">
        {% for post in posts|slice(0,1) %}
            {% include 'views/parts/blocks/articles/featured-article.twig' %}
        {% endfor %}
        
        {% for post in posts|slice(1,1) %}
            {% include 'views/parts/blocks/articles/big-article.twig' %}
        {% endfor %}

        <div class="delayed-scroll px-8 relative mb-14 lg:mb-36">
            <div class="container mx-auto grid grid-cols-1 lg:grid-cols-3 gap-14">
                {% for post in posts|slice(2,2) %}
                    <div>
                        {% include 'views/parts/blocks/articles/normal-article.twig' %}
                    </div>
                {% endfor %}
                <div class="grid grid-cols-1 gap-14">
                {% for post in posts|slice(4,3) %}
                    {% include 'views/parts/blocks/articles/small-article.twig' %}
                {% endfor %}
                </div>
            </div>
        </div>

        {% include 'views/parts/blocks/boxes/brands.twig' %}

        {% for post in posts|slice(7,1) %}
            {% include 'views/parts/blocks/articles/big-article.twig' %}
        {% endfor %}
        {% for post in posts|slice(8,1) %}
            {% include 'views/parts/blocks/articles/big-article.twig' with { inverted: true }%}
        {% endfor %}

        <div class="delayed-scroll px-8 relative mb-14 lg:mb-36">
            <div class="container mx-auto grid grid-cols-1 lg:grid-cols-3 gap-14">
                {% for post in posts|slice(9,9) %}
                    {% include 'views/parts/blocks/articles/normal-article.twig' %}
                {% endfor %}
            </div>
        </div>

        <div>
            {% include 'views/parts/blocks/articles/pagination.twig' %}
        </div>
    </div>
{% endblock %}
