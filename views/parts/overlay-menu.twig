<nav id="navigation"
	class="fixed -top-full w-full h-full left-0 right-0 block overflow-x-hidden z-[100] transition-all delay-150 bg-relacje-color-dark/[.97]">
	<div class="w-full min-h-screen overflow-y-auto overflow-x-hidden relative">

		<div class="container mx-auto grid grid-cols-2 gap-4 content-center items-center h-28">
			<div class="item col-start-2 col-span-1 justify-self-end items-center flex flex-row gap-4 lg:gap-8">
				<label id="close-navigation" class="burger flex flex-col w-[40px] cursor-pointer relative -right-[3px]" for="check">
					<input type="checkbox" checked id="check" class="hidden" />
					<span class="rounded-lg h-[3px] my-[4px]"></span>
					<span class="rounded-lg h-[3px] my-[4px]"></span>
					<span class="rounded-lg h-[3px] my-[4px]"></span>
				</label>
			</div>
		</div>

		<div class="container mx-auto w-full grid grid-cols-1 lg:grid-cols-[200px_auto_200px] gap-8 pb-10 relative">

			<div class="order-2 lg:order-1 lg:grid grid-flow-col-1">
				<ul class="flex flex-col gap-4 items-center lg:items-start lg:pt-[300px]">
					{% for brand in options.marki %}
					<li>
						<a href="{{ brand.link }}" target="_blank" class="inline-block hover:pb-1 transition-all duration-200 w-full">
							<img src="{{ Image( brand.logo_dark ) }}" alt="{{ brand.name }}">
						</a>
					</li>
					{% endfor %}
				</ul>
			</div>

			<div class="order-1 lg:order-2">
				<ul class="list-none text-center text-white/30 grid grid-cols-1 gap-6">
					{% for item in menu.overlay.items %}
					<li class="group">
						<span class="text-base lg:text-lg font-bold inline-block transition-all delay-150 duration-200 group-hover:text-relacje-color-accent">{{ loop.index | leading_zero }}.</span>
						<p>
							<a href="{{ item.link }}" target="{{ item.target }}" class="block text-[30px] lg:text-h1lg md:text-h1md sm:text-h1sm font-bold text-white/70 transition-all delay-150 duration-200 hover:text-white">{{ item.title }}</a>
						</p>

						{% if item.children %}
						<ul class="my-7 grid grid-cols-1 gap-4">
							{% for child in item.children %}
							<li>
								<a href="{{ child.link }}" target="{{ child.target }}" class="block text-[18px] lg:text-h4lg md:text-h4md sm:text-h4sm font-bold text-white/70 transition-all delay-150 duration-200 hover:text-relacje-color-accent">{{ child.title }}</a>
							</li>
							{% endfor %}
						</ul>
						{% endif %}
					</li>
					{% endfor %}
				</ul>
			</div>

			<div class="order-3 lg:grid grid-flow-col-1">
				<ul class="flex flex-col gap-4 text-sm text-white/60 text-center lg:text-right lg:pt-[300px]">
					<li class="text-white/40">
						Bądź na bieżąco:
					</li>
					{% for entry in options.social_media %}
					<li>
						<a href="{{ entry.link }}" target="_blank" class="transition-all duration-200 text-white/60 hover:text-relacje-color-accent">{{ entry.label }}</a>
					</li>
					{% endfor %}
				</ul>
			</div>

		</div>

	</div>
</nav>