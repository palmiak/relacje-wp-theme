{% if posts.pagination.prev or posts.pagination.next %}
<div class="flex flex-col items-center mb-14 lg:mb-36">
    <div class="flex text-relacje-color-dark/70">
        {% if posts.pagination.prev %}
        <div
            class="h-12 w-12 mr-1 flex justify-center items-center rounded-full bg-relacje-color-dark/5 cursor-pointer">
            <a href="{{ posts.pagination.prev.link }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="feather feather-chevron-left w-6 h-6">
                    <polyline points="15 18 9 12 15 6"></polyline>
                </svg>
            </a>
        </div>
        {% endif %}
        <div class="flex h-12 font-medium rounded-full ">
            {% for page in posts.pagination.pages %}
				{% if page.link %}
					<a href="{{ page.link }}"
                    class="hover:bg-relacje-color-dark hover:text-white w-12 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in  rounded-full  ">
                        {{ page.title }}
                    </a>
				{% else %}
					<a href="{{ page.link }}"
                    class="hover:bg-relacje-color-dark hover:text-white w-12 md:flex justify-center items-center hidden  cursor-pointer leading-5 transition duration-150 ease-in bg-relacje-color-accent text-white rounded-full  ">
                        {{ page.title }}
                    </a>
				{% endif %}
            {% endfor %}
        </div>
        {% if posts.pagination.next %}
        <div
            class="group h-12 w-12 ml-1 flex justify-center items-center rounded-full bg-relacje-color-dark/5 cursor-pointer">
            <a href="{{ posts.pagination.next.link }}">
                <svg xmlns="http://www.w3.org/2000/svg" width="100%" height="100%" fill="none" viewBox="0 0 24 24"
                    stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round"
                    class="feather feather-chevron-right w-6 h-6">
                    <polyline points="9 18 15 12 9 6"></polyline>
                </svg>
            </a>
        </div>
        {% endif %} 
    </div>
</div>
{% endif %}