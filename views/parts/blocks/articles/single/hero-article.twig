<article class="relative delayed-scroll px-8 mb-14 lg:mb-36">
    <div class="container mx-auto grid grid-cols-1 lg:grid-cols-2 gap-8 lg:gap-14 lg:items-end lg:h-[800px]">
        <div class="order-2 lg:order-1 lg:max-w-[530px]">

            {{ breadcrumbs }}
            <h1 class="text-[24px] md:text-[40px] lg:[60px] font-relacje-font-heading leading-snug mb-8 lg:mb-12">
                {{ post.title }}
            </h1>
            <div
                class="prose leading-normal prose-lg prose-p:text-relacje-color-dark/70 prose-heading:text-relacje-color-dark/70 prose-strong:text-relacje-color-dark/70 prose-ul:list-image-checkmark prose-li:ps-[20px] mb-8 lg:mb-12">
                {{ post.preview.read_more('') }}
            </div>
            <div class="flex gap-4 flex-row items-center">
                <img src="{{ Image( post.author.meta('avatar'))|resize(112,122,'center')|towebp }}" alt="{{ post.author.display_name }}"
        class="object-cover size-14 rounded-full">
                <span class="font-bold">{{ post.author.display_name }}</span>
            </div>
        </div>

        <div class="order-1 lg:order-2">
            <img src="{{ post.thumbnail }}" alt="{{ post.title }}"
                class="object-cover h-[400px] lg:h-[800px] w-full lg:w-[48%] static lg:absolute bottom-0 right-0">
        </div>
    </div>

</article>