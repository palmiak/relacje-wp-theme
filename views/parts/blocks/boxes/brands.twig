<section class="relacje-block delayed-scroll mb-28 lg:mb-36">
    <div class="grid grid-cols-1 min-[1025px]:grid-cols-[auto_400px] min-[1400px]:grid-cols-[auto_700px] gap-0">
        <div class="min-[1400px]:order-2 min-[1025px]:order-2">
            <div class="bg-relacje-color-dark p-8 py-12 md:p-20 lg:p-24 relative before:hidden before:min-[1400px]:block before:bg-relacje-color-dark before:absolute before:top-0 before:-left-[100px] before:h-[100px] before:w-[100px] z-10">
                <h3 class="text-white mb-8 lg:mb-12">
                    {{ options.default_brand_title|shortcodes }}
                </h3>
                <div
                    class="prose leading-normal max-w-[495px] prose-lg prose-p:text-white/70 prose-heading:text-white/70 prose-strong:text-white/70 prose-ul:list-image-checkmark prose-li:ps-[20px] mb-8 lg:mb-12">
                    <p>
                        {{ options.default_brand_description }}
                    </p>
                </div>
    
                <a href="{{ options.default_brand_url }}" class="relacje-button button-link group text-white hover:text-relacje-color-accent">
                    {{ options.default_brand_cta }}
                    <svg class="absolute right-5 top-2/4 -mt-[9px] fill-white group-hover:fill-relacje-color-accent" xmlns="http://www.w3.org/2000/svg" width="18"
                        height="18" viewBox="0 0 18 18" fill="none">
                        <path fill-rule="evenodd" clip-rule="evenodd"
                            d="M11.1225 8.46728L7.94249 5.28728C7.80166 5.14529 7.60997 5.06543 7.40999 5.06543C7.21001 5.06543 7.01831 5.14529 6.87749 5.28728C6.5867 5.57981 6.5867 6.05225 6.87749 6.34478L9.53249 8.99978L6.87749 11.6548C6.5867 11.9473 6.5867 12.4198 6.87749 12.7123C7.01903 12.8527 7.21064 12.9309 7.40999 12.9298C7.60934 12.9309 7.80095 12.8527 7.94249 12.7123L11.1225 9.53228C11.2645 9.39145 11.3443 9.19976 11.3443 8.99978C11.3443 8.7998 11.2645 8.6081 11.1225 8.46728Z" />
                    </svg>
                </a>
            </div>
        </div>
        <div class="min-[1400px]:order-1 min-[1400px]:pt-[100px] min-[1025px]:order-1">
            <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-2 gap-0 items-stretch">
                {% for brand in options.marki %}
                    {% include "parts/blocks/boxes/brands-brand.twig" with { brand: brand } %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>